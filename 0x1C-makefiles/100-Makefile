# Makee file for school executable

# Variables
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic

SRC = main.c school.c

OBJ = $(SRC:.c=.o)

NAME = school

RM = /bin/rm -f

# Main target
all: $(NAME)

# Build executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Compile each .c file into .o file
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@
# Clean rules
clean:
	$(RM) $(OBJ) *~

oclean: clean
	$(RM) $(NAME)

fclean: oclean

re: fclean all

# Ensure that m.h header file exists
$(OBJ): m.h
